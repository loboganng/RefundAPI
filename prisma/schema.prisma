generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum UserRole {
  employee
  manager
}

enum Category {
  food
  other
  services
  transport
  accomodation
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique

  role UserRole @default(employee)

  refunds Refunds[] // Relação 1:N com Refunds

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  @@map("users")
}

model Refunds {
  id String @id @default(uuid())
  name String
  amount Float 
  category Category
  filename String

  userId String @map("user_id")
  user User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  @@map("refunds")
}